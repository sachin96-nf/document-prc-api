		<set-variable value="#[&quot;SELECT ContentDocumentId FROM ContentVersion WHERE Id = '&quot; ++ payload.items[0].id as String ++ &quot;'&quot;]" doc:name="query" doc:id="bf0400a2-518b-4fb2-9743-617fec5e1f9b" variableName="query" />
		<flow-ref doc:name="salesforce-query-subflow" doc:id="41cc6c89-59cb-497a-8cbd-31b1a4662986" name="salesforce-query-subflow" />
