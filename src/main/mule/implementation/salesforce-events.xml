		<set-variable value='#["attachment.zip"]' doc:name="attachmentName" doc:id="ba392d34-d097-4364-9619-91bfdab751de" variableName="attachmentName" />
		<set-payload value='#[%dw 2.0&#10;import * from dw::core::Binaries&#10;output application/java&#10;---&#10;[{&#10;    PathOnClient: vars.attachmentName,&#10;    VersionData: vars.zipped_data as Binary {&#10;        class: "byte[]"&#10;    }&#10;}]]' doc:name="Payload to Zip" doc:id="fd90123b-7aa3-4900-a16a-5951556f2b1c" />
