		<flow-ref doc:name="salesforce-upsert-subflow1" doc:id="4b8a5b02-41ef-4ac4-b10c-1ae9f3c3df0d" name="salesforce-upsert-subflow" />
		<logger level="INFO" doc:name="Info Log" doc:id="e2fa42c1-0ecf-4dc4-b42d-0a36c96d326e" message='#[{&#10;	"Salesforce Output": payload&#10;}]' />
	</sub-flow>
	<sub-flow name="salesforce-upsert-subflow" doc:id="8664effd-8f43-49a7-ade6-e2c481d43168" >
		<logger level="INFO" doc:name="Info Log" doc:id="515fbb36-0f0f-45b7-a6b4-91519c8c0f3b" message='#["Start upserting data into Salesforce for Object: " ++ (vars.objectname default "") as String]'/>
		<try doc:name="Try" doc:id="4229be27-5f08-4aac-a00b-803da5db5ebe" >
			<until-successful maxRetries="${retry.count}" doc:name="Until Successful" doc:id="34a27fcc-5809-4170-9ff5-6a26efab77ae" millisBetweenRetries="${retry.freq}">
			<salesforce:upsert objectType="#[vars.objectname]" externalIdFieldName='#[vars.externalid default "Id"]' doc:name="Upsert in SF" doc:id="b0b5f341-e211-423a-bfad-4b3d84ba7f86" config-ref="Salesforce_Config" />
		</until-successful>
			<error-handler >
				<on-error-propagate enableNotifications="true" logException="true" doc:name="On Error Propagate" doc:id="d336d2d3-27b6-4551-8191-55cd2984a3ea" >
					<logger level="ERROR" doc:name="Log Error" doc:id="b7db6cd3-d062-4674-abf3-ebc1b6ff0df7" message="Salesforce Upsert failed due to connectivity/upsert issues"/>
				</on-error-propagate>
			</error-handler>
		</try>
		<ee:transform doc:name="Convert Response to JSON" doc:id="5e0ac34d-0055-4462-aef1-44e4ef4c64c6">
			<ee:message>
				<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
if (payload.items[0].statusCode=="DUPLICATES_DETECTED") 
(
	"items": [
		{
			"id": payload..Id[-1],
			payload: {
				errors: []
			}
		}
	]
) else payload]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<logger level="INFO" doc:name="Exit Log" doc:id="c60de00d-7ce2-4c37-84ed-594d93fe4fab" message='#["Finished upserting data into Salesforce for Object: " ++ (vars.objectname default "") as String]' />
	</sub-flow>
	<sub-flow name="salesforce-query-subflow" doc:id="6e64ce08-24ae-4f32-8219-f9bab4424101" >
		<logger level="INFO" doc:name="Info Log" doc:id="1a117354-10cd-479e-9fa1-b21224a23cd9" message='#["Start query data from Salesforce : " ++ vars.query as String]' />
		<try doc:name="Try" doc:id="fbecf16b-9780-4232-9d18-0d97cee156a9" >
			<until-successful maxRetries="${retry.count}" doc:name="Until Successful" doc:id="6f278469-ed88-470f-866a-abcfa7ed4713" millisBetweenRetries="${retry.freq}">
			<salesforce:query doc:name="Query Salesforce" doc:id="86290577-fa43-4729-abb1-183b17676270" config-ref="Salesforce_Config">
			<salesforce:salesforce-query><![CDATA[#[vars.query]]]></salesforce:salesforce-query>
		</salesforce:query>
		</until-successful>
			<error-handler >
				<on-error-propagate enableNotifications="true" logException="true" doc:name="On Error Propagate" doc:id="30c0c121-0dda-4210-a340-5d23b3bd531b" >
					<logger level="ERROR" doc:name="Log Error" doc:id="2abc2336-7604-49a6-acc6-f864901438f0" message="Salesforce Query failed due to connectivity/invalid-query issues" />
				</on-error-propagate>
			</error-handler>
		</try>
		<ee:transform doc:name="Convert Response to JSON" doc:id="01b52378-5f66-4adf-935c-813c5c4a0e66">
			<ee:message>
				<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
payload]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<logger level="INFO" doc:name="Exit Log" doc:id="582ffbeb-eb3e-4441-a8b8-8ec139684a75" message="Finished query data from Salesforce" />
	</sub-flow>
</mule>
