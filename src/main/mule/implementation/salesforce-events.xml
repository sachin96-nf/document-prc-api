	<sub-flow name="send-attachments-to-sf-subflow" doc:id="228a2836-e332-46a1-a591-eac8b78cd79d">
		<set-variable value="${salesforce.docobj_contentversion}" doc:name="contentversion" doc:id="d7979970-2dd5-4cc1-91e8-f83a11b6b7da" variableName="objectname" />
